<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.aeyoung.postit.communitys.MainActivity">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/item_selector"
            android:stateListAnimator="@drawable/state_list_animator"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="5dp"
            app:cardPreventCornerOverlap="false">

            <Button
                android:id="@+id/grade1"
                android:drawableTop="@drawable/first"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@null"
                android:gravity="center"
                android:text="\n1학년"
                android:textSize="80px"/>
        </android.support.v7.widget.CardView>


        <com.aeyoung.postit.YcCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/item_selector"
            android:stateListAnimator="@drawable/state_list_animator"
            app:ycCardCornerRadius="5dp"
            app:ycCardElevation="5dp"
            app:ycCardMaxElevation="5dp"
            app:ycCardPreventCornerOverlap="true">

            <Button
                android:id="@+id/grade2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@null"
                android:drawableTop="@drawable/second"
                android:gravity="center"
                android:text="\n2학년"
                android:textSize="80px" />
        </com.aeyoung.postit.YcCardView>
        <com.aeyoung.postit.YcCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/item_selector"
            android:stateListAnimator="@drawable/state_list_animator"
            app:ycCardCornerRadius="5dp"
            app:ycCardElevation="5dp"
            app:ycCardMaxElevation="5dp"
            app:ycCardPreventCornerOverlap="true">

            <Button
                android:id="@+id/grade3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@null"
                android:drawableTop="@drawable/third"
                android:gravity="center"
                android:text="\n3학년"
                android:textSize="80px" />
        </com.aeyoung.postit.YcCardView>
        <com.aeyoung.postit.YcCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/item_selector"
            android:stateListAnimator="@drawable/state_list_animator"
            app:ycCardCornerRadius="5dp"
            app:ycCardElevation="5dp"
            app:ycCardMaxElevation="5dp"
            app:ycCardPreventCornerOverlap="true">

            <Button
                android:id="@+id/grade4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@null"
                android:drawableTop="@drawable/fourth"
                android:gravity="center"
                android:text="\n4학년"
                android:textSize="80px" />
        </com.aeyoung.postit.YcCardView>
    </LinearLayout>
</ScrollView>